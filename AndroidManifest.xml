<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="idrabenia.weather"
          android:versionCode="1"
          android:versionName="1.0">
    <uses-sdk android:minSdkVersion="14"/>

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application android:label="@string/app_name" android:icon="@drawable/ic_launcher" >
        <activity android:name=".ui.weather.WeatherActivity" android:theme="@android:style/Theme.Black.NoTitleBar"
                  android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".ui.CrashDialogActivity" android:theme="@android:style/Theme.Black.NoTitleBar"
                  android:process=":report_process" />

        <receiver android:name=".ui.weather.WeatherGadgetProvider" android:label="Weather Gadget">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>
            <meta-data
                    android:name="android.appwidget.provider"
                    android:resource="@xml/weather_gadget" />
        </receiver>
    </application>
</manifest>