<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="idrabenia.weather"
          android:versionCode="1"
          android:versionName="1.0">
    <uses-sdk android:minSdkVersion="14" android:targetSdkVersion="14" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />

    <application android:label="@string/app_name" android:icon="@drawable/ic_launcher" >


        <!-- ==================== Weather Activity configuration ===================== -->

        <activity android:name=".ui.activity.WeatherActivity" android:theme="@android:style/Theme.Black.NoTitleBar"
                  android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity android:name=".ui.activity.CrashDialogActivity" android:theme="@android:style/Theme.Black.NoTitleBar"
                  android:process=":report_process" />

        <!-- ====================================================================== -->



        <!-- ==================== Weather Gadget configuration ===================== -->

        <receiver android:name=".ui.gadget.WeatherGadgetProvider" android:label="Weather Gadget">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>
            <meta-data
                    android:name="android.appwidget.provider"
                    android:resource="@xml/weather_gadget" />
        </receiver>

        <!-- ======================================================================= -->



        <!-- =================== Weather Service configuration ===================== -->

        <receiver android:name=".ui.service.BootListener">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
        </receiver>

        <service android:name=".ui.service.WeatherService" />

        <!-- ====================================================================== -->


    </application>

</manifest>